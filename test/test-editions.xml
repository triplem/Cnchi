<?xml version="1.0" encoding="UTF-8"?>
<cnchi  xmlns="http://antergos.com/cnchi/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://antergos.com/cnchi/">

    <!-- This file is just an excerpt for testing purposes, do not use it in production ;-) -->
    <editions>
        <edition name="common" title="Common" showInInstaller="false">
            <description>
                Common packages for all other editions
            </description>

            <pkgname>alsa-utils</pkgname>
            <pkgname>antergos-keyring</pkgname>
            <pkgname>antergos-mirrorlist</pkgname>
        </edition>

        <!-- Common to all graphic desktops -->
        <!-- It's best to put here apps that are qt/gtk agnostic -->
        <edition name="graphic_common" title="Graphic Common" showInInstaller="false" extends="common">
            <description>
                Common Graphic packages
            </description>

            <pkgname>accountsservice</pkgname>
            <pkgname>antergos-wallpapers</pkgname>
            <pkgname>chromium</pkgname>
            <pkgname>libreoffice-installer</pkgname>
            <pkgname>light-locker</pkgname>
            <pkgname dm='lightdm'>lightdm</pkgname>
        </edition>

        <edition name="gnome" title="Gnome3" lib="gtk" extends="graphic_common">
            <description>
                Gnome 3 is an easy and elegant way to use your computer. It features the Activities Overview which
                is an easy way to access all your basic tasks. GNOME 3 is the default desktop in Antergos.
            </description>

            <pkgname>antergos-gnome-defaults-list</pkgname>
            <pkgname>cdrkit</pkgname>
            <pkgname>empathy</pkgname>
            <pkgname>evince</pkgname>
            <pkgname>eog</pkgname>
            <pkgname nm='NetworkManager'>network-manager-applet</pkgname>
            <pkgname>networkmanager-openvpn</pkgname>

            <userfeatureset>
                <userfeature ref="aur"/>
                <userfeature ref="bluetooth"/>
            </userfeatureset>
        </edition>

        <edition name="cinnamon" title="Cinnamon" lib="gtk" extends="graphic_common">
            <description>
                Cinnamon is a fork of GNOME 3 developed
                by (and for) Linux Mint. It provides users a more traditional desktop
                interface along with the newest compositing techniques of GNOME 3.
                Cinnamon is for users of all experience levels.
            </description>

            <pkgname>nemo</pkgname>
            <pkgname nm='NetworkManager'>network-manager-applet</pkgname>
            <pkgname>networkmanager-openvpn</pkgname>

            <userfeatureset>
                <userfeature ref="aur"/>
                <userfeature ref="cups"/>
            </userfeatureset>
        </edition>

        <edition name="xfce" title="Xfce" lib="gtk" enabled="false" extends="graphic_common">
            <description>
                Xfce is a lightweight desktop environment. It aims to
                be fast and low on system resources, while remaining visually
                appealing and user friendly. It is a great option for use
                on older computers or those with low hardware specifications.
            </description>

            <pkgname nm='NetworkManager'>network-manager-applet</pkgname>
            <pkgname>xfce4-screenshooter</pkgname>
            <pkgname>xfce4-taskmanager</pkgname>
            <pkgname>xnoise</pkgname>
            <pkgname>zukitwo-themes</pkgname>
        </edition>

        <edition name="nox" title="Base Install" extends="common">
            <description>
                Base system without X (nox)
            </description>

            <!-- archivers -->
            <pkgname>arj</pkgname>
            <pkgname>cabextract</pkgname>
            <pkgname>bzip2</pkgname>
            <pkgname>fastjar</pkgname>
            <pkgname>lz4</pkgname>
            <pkgname>lzo2</pkgname>
            <pkgname>lzop</pkgname>
            <pkgname>rpmextract</pkgname>
            <pkgname>sharutils</pkgname>
            <pkgname>unace</pkgname>
            <pkgname>uudeview</pkgname>
            <pkgname>unrar</pkgname>
            <pkgname>xz</pkgname>
            <pkgname>zip</pkgname>
        </edition>
    </editions>

    <features>
        <feature name="filesystems">
            <pkgname alias="btrfs">btrfs-progs</pkgname>
            <pkgname alias="ext2 ext3 ext4">e2fsprogs</pkgname>
            <pkgname alias="jsf">jfsutils</pkgname>
            <pkgname alias="nilfs2">nilfs-utils</pkgname>
            <pkgname alias="ntfs">ntfs-3g</pkgname>
            <pkgname alias="raid">dmraid</pkgname>
            <pkgname alias="reiserfs">reiserfsprogs</pkgname>
            <pkgname alias="fat16 fat32">dosfstools</pkgname>
            <pkgname alias="xfs">xfsprogs</pkgname>
        </feature>

        <feature name="ntp">
            <pkgname>ntp</pkgname>
        </feature>

        <feature name="special_fonts">
            <pkgname alias="zh_TW zh_CN">opendesktop-fonts</pkgname>
        </feature>

        <feature name="grub">
            <pkgname>grub</pkgname>
            <pkgname>os-prober</pkgname>
            <pkgname alias="uefi">efibootmgr</pkgname>
            <pkgname alias="uefi">dosfstools</pkgname>
        </feature>

    </features>

<!--
    <net>
        <broadcom>
            <pkgname>broadcom-wl</pkgname>
        </broadcom>
    </net>

-->

    <!-- User desired features -->
    <userfeatures>
        <userfeature name="aur" title="AUR" icon-name="icon-name">
            <description>
                ArchUserRepository
            </description>
            <tooltip>
                a test tooltip
            </tooltip>

            <pkgname>yaourt</pkgname>
            <pkgname>cmake</pkgname>
            <pkgname>git</pkgname>
            <pkgname>bzr</pkgname>
        </userfeature>
        <userfeature name="bluetooth">
            <pkgname lib='qt'>bluedevil</pkgname>
            <pkgname>bluez-utils</pkgname>
            <pkgname lib='gtk'>gnome-bluetooth</pkgname>
        </userfeature>
        <userfeature name="cups" title="CUPS">
            <pkgname>cups</pkgname>
            <pkgname>cups-pk-helper</pkgname>
            <pkgname>foomatic-db-nonfree</pkgname>
            <pkgname>gsfonts</pkgname>
            <pkgname>gutenprint</pkgname>
            <pkgname>hplip</pkgname>
            <pkgname lib='qt'>kdeutils-print-manager</pkgname>
            <pkgname lib='gtk'>system-config-printer</pkgname>
            <pkgname>splix</pkgname>
        </userfeature>
        <userfeature name="gnome_extra">
            <!-- Gnome extra installs brasero, so why install xfburn too? -->
            <pkgname conflicts='xfburn'>gnome-extra</pkgname>
        </userfeature>
        <userfeature name="fonts">
            <pkgname>ttf-freefont</pkgname>
            <pkgname conflicts='ttf-droid'>ttf-google-fonts</pkgname>
        </userfeature>
        <userfeature name="office">
            <pkgname>libreoffice-calc</pkgname>
            <pkgname>libreoffice-common</pkgname>
            <pkgname lib='gtk'>libreoffice-gnome</pkgname>
            <pkgname>libreoffice-impress</pkgname>
            <pkgname lib='qt'>libreoffice-kde4</pkgname>
            <pkgname>libreoffice-writer</pkgname>
        </userfeature>
        <!-- visual effects for openbox -->
        <userfeature name="visual">
            <pkgname>compton</pkgname>
            <pkgname>paranoid</pkgname>
        </userfeature>
        <!-- Uncomplicated firewall -->
        <userfeature name="firewall">
            <pkgname lib='gtk'>gufw</pkgname>
            <pkgname lib='qt'>kcm-ufw</pkgname>
            <pkgname>ufw</pkgname>
        </userfeature>
        <!-- Third party software. Some of it is proprietary -->
        <userfeature name="third_party">
            <pkgname>flashplugin</pkgname>
            <pkgname>libdvdcss</pkgname>
        </userfeature>
    </userfeatures>

</cnchi>
